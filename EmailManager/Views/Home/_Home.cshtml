@model EmailManager.Models.UserList

<div class="jumbotron">
    <h1>Email Managment</h1>
    <p class="lead">Choose user to browse his emails addresses.</p>
</div>
<div class="row">
    <h2>Выберите пользователя</h2>
    @if (Model != null)
    {
        @Html.DropDownListFor(
                      model => model.SelectedId,
                      new SelectList(Model.Users, "Id", "Name"),
                      "Пользователь не выбран",
                      new { @class = "form-control", id = "userId" });
    }
</div>
<div class="row">
    <h2>Адреса электронной почты:</h2>
    <div id="user-emails-list"></div>
</div>
